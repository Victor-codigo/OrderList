<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">
    
    <entity name="App\Orm\Entity\Group" 
        table="Groups">
        
        <id name="id"
            type="string"
            column-definition="CHAR(36) NOT NULL">
            <generator strategy="AUTO"/>
        </id>

        <field name="name"
               type="string"
               length="50"
               unique="true"/>
        
        <field name="description"
               type="string"
               column-definition="TEXT"
               nullable="true"/>

        <field name="createdOn" 
               column="created_on"
               type="datetime"/>


        <many-to-many field="users" 
                      mapped-by="groups" 
                      target-entity="App\Orm\Entity\User"/>
        
        <unique-constraints>
            <unique-constraint name="u_groups_id" columns="id"/>
            <unique-constraint name="u_groups_name" columns="name"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
