<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">
    
    <entity name="Group\Adapter\Database\Orm\Doctrine\Mapping\Group" 
        table="Groups">
        
        <id name="id"
            type="string"
            column-definition="CHAR(36) NOT NULL"/>

        <field name="name"
               type="string"
               length="50"
               unique="true"/>
        
        <field name="description"
               type="string"
               column-definition="TEXT"
               nullable="true"/>

        <field name="createdOn" 
               column="created_on"
               type="datetime"/>

        <!-- Groups - Users -->
        <many-to-many field="users" 
                      mapped-by="groups" 
                      target-entity="User\Adapter\Database\Orm\Doctrine\Mapping\User"/>

        <!-- Groups - Shops -->
        <one-to-many field="shops" 
                     target-entity="Shop\Adapter\Database\Orm\Doctrine\Mapping\Shop" 
                     mapped-by="group" />

        <!-- Groups - Product -->
        <one-to-many field="products" target-entity="Product\Adapter\Database\Orm\Doctrine\Mapping\Product" mapped-by="group" />
        
        <unique-constraints>

            <unique-constraint name="u_groups_id" 
                               columns="id"/>

            <unique-constraint name="u_groups_name" 
                               columns="name"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
