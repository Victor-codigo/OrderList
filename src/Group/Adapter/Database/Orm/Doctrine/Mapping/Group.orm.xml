<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Group\Domain\Model\Group"
            table="`Groups`"
            repository-class="Group\Adapter\Database\Orm\Doctrine\Repository\GroupRepository">

        <id name="id"
            type="IdentifierType"
            column-definition="CHAR(36) NOT NULL"/>

        <field name="name"
               type="NameType"
               length="50"
               unique="true"/>

        <field name="description"
               type="DescriptionType"
               length="500"
               nullable="true"/>

        <field name="type"
               type="GroupTypeType"
               length="50"/>

        <field name="createdOn"
               column="created_on"
               type="datetime"/>

        <unique-constraints>

            <unique-constraint name="u_groups_id"
                               columns="id"/>
        </unique-constraints>

        <!-- Groups - Users -->
        <one-to-many field="users"
                     target-entity="Group\Domain\Model\UserGroup"
                     mapped-by="groups" />

    </entity>
</doctrine-mapping>
